{
  "env": {
    "jquery": true
  },

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
},

  "overrides": [
    {
      "files": [ "src/**/*.js" ],
      "extends": [
        "standard",
        "htmlacademy/es6"
      ],
      "rules": {
        "eqeqeq": "warn",
        "indent": ["error", 4],
        "semi": ["error", "never"],
        "quotes": "off",
        "no-console": "off",
        "no-unused-vars": "warn",
        "space-before-function-paren": "warn"
      }
    }
  ]
}
